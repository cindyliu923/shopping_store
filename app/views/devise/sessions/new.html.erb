<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-12 col-lg-4 p-5">
      <div class="p-5"></div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field text-center">
        <%= f.label :email, 'Email Address' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",style: "width:100%" %>
      </div>
      <br>
      <div class="field text-center">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off",style: "width:100%" %>
      </div>
<!--  <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
-->
      <br>
      <div class="actions">
        <%= f.submit "Log in", style: "float:right", class: "btn btn-outline-info" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>