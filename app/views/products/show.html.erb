<div id="item-list">    
  <div class="container">
    <div class="p-4"></div>
    <div class="row align-self-center">
    <div class="col-12 col-sm-10 col-md-2">
      <%= image_tag(@product.image, width: 200, class: "zoom-in", 'data-toggle' => "modal", 'data-target' => "#exampleModalCenter") %>
    </div>
    <div class="col-12 col-sm-10 col-md-6">
      <h3><%= @product.name %></h3>
      <h4>$ <%= @product.price %></h4>
      <p><%= simple_format @product.description %></p>
      <div id="<%= @product.id %>" class="cart-item-<%= @product.id %>">
        <div class="">
          <div class="">
            <div id="<%= @product.id %>" class="product-show-button">
              <div class="quantity-fram">
                <div class="minus">-</div>
                <div class="quantity">
                  <%= ( @cart_item.quantity if @cart_item.present? ) || 1 %>
                </div>
                <div class="add">+</div>
              </div>
              <button class="add-product">Add to Cart</button>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
    <%= render :partial => "shared/cart_item_list" %>
  </div>
</div>
<%= render :partial => "shared/item_template" %>

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <%= image_tag(@product.image) %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
