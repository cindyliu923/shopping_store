<div class="container">  
  <div class="col-12 col-sm-10 col-md-10">
    <div id="<%= @product.id%>"  class="row"> 
      <%= image_tag(@product.image, width: 100 ) %>
      <h3><%= @product.name %></h3>
      <h5>$ <%= @product.price %></h5>
      <%= simple_format @product.description %>
      <button class="add-product">Add to Cart</button>
    </div>
  </div>
    <%= render :partial => "shared/cart_item_list" %>
</div>

<%= render :partial => "shared/item_template" %>