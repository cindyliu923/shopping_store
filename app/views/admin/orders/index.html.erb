<div class="container">
  <br>
  <div class="row">
    <div class="col-12 col-md-12">
      <ul class="navbar-light bg-light nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item">
          <%= link_to 'Product', admin_products_path, class: "nav-link btn btn-outline-success" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Order', admin_orders_path, class: "nav-link active btn btn-outline-success" %>
        </li>
      </ul>
    </div>
    <div class="col-12 col-md-10">
      <br>
      <table class="table table-bordered text-center">
        <thead class="thead-light">
          <tr>
            <th scope="col">Order Number</th>
            <th scope="col">Price</th>
            <th scope="col">Payment status</th>
            <th scope="col">Shipping status</th>
            <th scope="col">Order Detail</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <th scope="row">#<%= order.sn %></th>
            <td>$<%= order.amount %></td>
            <td><%= order.show_payment_status %></td>
            <td><%= order.show_shipping_status %></td>            
            <td><%= link_to 'Edit Detial', edit_admin_order_path(order) %></td> 
          </tr>
          <% end %>
        </tbody>
      </table>
      <nav class="container">
        <%= paginate @orders %>
      </nav>
    </div>
  </div>
</div>