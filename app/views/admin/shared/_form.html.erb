<% if @product.errors.any? %>
  <h2>We have some errors here !</h2>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<div class="col-12 col-md-12">
  <h3><%= print_product_title(@product) %></h3>
  <%= form_for  [:admin, @product] do |f| %>
    <div class="form-group">
      <%= f.text_field :name, placeholder: "Product Name", class: "col-12 col-md-8" %>
    </div>
    <div class="form-group"> 
      <%= image_tag @product.image, width: '30px' if @product.image? %>
      <%= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.text_area :description, placeholder: "Add Product Description...", rows: "10", class: "col-12 col-md-8"%>
    </div>
    <div class="form-group">
      <%= f.text_field :price, placeholder: "Price", class: "col-12 col-md-8"%>
    </div>
    <div class="col-12 col-md-8">
      <%= f.submit "Submit", class: "float-right" %>
    </div>
  <% end %>
</div>