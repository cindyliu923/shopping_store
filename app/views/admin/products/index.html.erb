<h1>商品後台</h1>

<ul>
  <% @products.each do |product| %>
  <li>
    <%= product.name %>
    <%= image_tag product.image, width: '30px' %>
    <%= product.price %>
    <%= link_to 'Edit Detial', edit_admin_product_path(product) %>
    <%= link_to 'Delete', admin_product_path(product), method: :delete, data: {confirm:"Are you sure?"} %>
  </li>
  <% end %>
</ul>
<%= link_to 'Add New Product', new_admin_product_path %>